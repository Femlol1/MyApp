        app:layout_constraintBottom_toBottomOf="@+id/textpostdiagnosis"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.116"
        app:layout_constraintStart_toEndOf="@+id/textpostdiagnosis"
        app:layout_constraintTop_toTopOf="@+id/textpostdiagnosis"
        app:layout_constraintVertical_bias="0.47" />

    <TextView
        android:id="@+id/pTreatmentView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/textposttreatments"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.677"
        app:layout_constraintStart_toEndOf="@+id/textposttreatments"
        app:layout_constraintTop_toTopOf="@+id/textposttreatments"
        app:layout_constraintVertical_bias="0.523" />


